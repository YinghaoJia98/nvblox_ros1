<?xml version="1.0" encoding="utf-8"?>

<launch>
  <arg name="use_sim_time"  default="true" />
  <arg name="param_file" default="$(find nvblox_ros)/config/smb_parameters.yaml"/>
  <arg name="rviz" default="true" />
  <!-- <node pkg="topic_tools" type="relay" name="vlp_relay" args="/velodyne_points /input_pointcloud" /> -->
  <node pkg="topic_tools" type="relay" name="front_lidar_relay" args="/lidar_front_points /input_pointcloud" />
  <!-- <node pkg="topic_tools" type="relay" name="back_lidar_relay" args="/lidar_back_points /input_pointcloud" /> -->

  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find nvblox_ros)/rviz/panopt.rviz" if="$(arg rviz)"/>

  <node pkg="nvblox_ros" type="nvblox_node" name="nvblox_node" respawn="false" output="screen" clear_params="true">
    <rosparam file="$(arg param_file)"/>
    <remap from="pointcloud" to="/input_pointcloud" />
  </node>

</launch>
